<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Navigation Drawer Header Style -->
    <style name="NavigationHeaderStyle">
        <item name="android:background">@drawable/drawer_header_background</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <!-- Navigation Item Style -->
    <style name="NavigationItemStyle">
        <item name="android:background">@drawable/nav_item_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Navigation Group Header Style -->
    <style name="NavigationGroupHeaderStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>

