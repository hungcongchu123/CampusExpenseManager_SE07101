<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Expense"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>
        <EditText
            android:id="@+id/edtExpenseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Expense Name"
            android:inputType="text"
            android:layout_marginBottom="16dp"/>

        <!-- Amount -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount:" />

        <EditText
            android:id="@+id/edtExpenseAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter amount"
            android:layout_marginBottom="16dp" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:" />

        <EditText
            android:id="@+id/edtExpenseDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter description"
            android:layout_marginBottom="16dp" />
        <!-- Category -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category:" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:" />

        <TextView
            android:id="@+id/tvExpenseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:padding="12dp"
            android:text="Select date"
            android:textColor="#000"
            android:layout_marginBottom="24dp" />

        <!-- Update button -->
        <Button
            android:id="@+id/btnUpdateExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Expense"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFF" />
        <!-- Delete button -->
        <Button
            android:id="@+id/btnDeleteExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Expense"
            android:backgroundTint="#F44336"
            android:textColor="#FFF"
            android:layout_marginBottom="16dp" />

        <!-- Back button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="#9E9E9E"
            android:textColor="#FFF" />

    </LinearLayout>
</ScrollView>
